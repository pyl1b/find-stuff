{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "rebuild index",
      "type": "debugpy",
      "request": "launch",
      "module": "find_stuff.__main__",
      "args": [
        "rebuild-index",
        "${workspaceFolder}",
        "--db",
        "${workspaceFolder}/playground/index.sqlite3",
        "--ext", "py"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "windows": {
        "python": "${workspaceFolder}\\venv\\Scripts\\python.exe"
      }
    }
  ]
}
